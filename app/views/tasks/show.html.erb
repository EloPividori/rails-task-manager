<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>

<% if @task.completed? %>
  <p>This task is completed</p>
<% else %>
  <p>This task is not yet completed</p>
<% end %>

<%= link_to("Edit Task", edit_task_path(@task)) %>

<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<%= link_to("Back to list of tasks", tasks_path) %>
